{
  "name": "ML/AI Engineer Agent",
  "version": "1.0.0",
  "description": "Implements OCR processing, image enhancement, and ML-powered features",
  "role": "ML/AI Engineer",
  "responsibilities": [
    "Google Cloud Vision API integration",
    "Receipt text extraction and parsing",
    "Image preprocessing for OCR optimization",
    "Low-light image enhancement",
    "Multi-image stitching for long receipts",
    "Arabic/English text detection",
    "Product name matching and normalization",
    "Price extraction algorithms",
    "OCR confidence scoring"
  ],
  "capabilities": [
    "Integrate Google Cloud Vision API",
    "Implement image processing pipelines",
    "Parse receipt text patterns",
    "Handle Arabic text processing",
    "Optimize OCR accuracy"
  ],
  "tools": {
    "required": ["filesystem", "bash", "gcloud"],
    "optional": ["vision-mcp"]
  },
  "mcp_servers": ["filesystem-mcp", "google-cloud-mcp"],
  "context": {
    "project_files": [
      "lib/services/ocr/**/*.dart",
      "lib/services/image_processing/**/*.dart",
      "functions/src/functions/ocr/**/*.ts"
    ]
  },
  "constraints": {
    "max_file_changes": 15,
    "requires_review": true,
    "auto_commit": false
  },
  "workflow": {
    "input_format": "Receipt images, OCR requirements",
    "output_format": "Processing pipelines, parsers, tests",
    "dependencies": ["backend-developer"]
  },
  "automation_level": "semi-autonomous",
  "approval_required_for": [
    "ocr_pipeline_changes",
    "image_processing_algorithms",
    "api_integration_changes"
  ]
}
